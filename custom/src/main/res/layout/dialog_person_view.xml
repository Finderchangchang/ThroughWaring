<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/dialog_ll_title"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_person_title"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_ll_bottom"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/dialog_ll_context"
        android:background="@drawable/dialog_person_bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_positiveButton"
            android:layout_width="114.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_ok_selector"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/dialog_negativeButton"
            android:layout_width="114.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_cancel_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_ll_context"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/dialog_ll_title"
        android:layout_marginBottom="-15dp"
        android:layout_marginTop="-15dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="身份证号：034水052085" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="手机号：034水052085" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="胡海珍" />
    </LinearLayout>

</RelativeLayout>